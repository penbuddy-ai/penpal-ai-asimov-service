# AI Service Configuration
NODE_ENV=development
PORT=3003
SERVICE_NAME=ai-service

# API Configuration
API_VERSION=v1
BASE_URL=http://localhost:3003/api/v1

# Database Service Integration
DB_SERVICE_URL=http://localhost:3001/api/v1
DB_SERVICE_API_KEY=your_db_service_api_key_here

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=2
REDIS_TTL=3600

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN=http://localhost:3000
WEBSOCKET_TRANSPORTS=websocket,polling

# AI Provider Configuration
AI_DEFAULT_PROVIDER=openai
AI_FALLBACK_PROVIDER=claude
AI_REQUEST_TIMEOUT=30000
AI_RETRY_ATTEMPTS=3

# Conversation Configuration
MAX_CONVERSATION_HISTORY=50
CONVERSATION_TIMEOUT=30m

# Corrections Configuration
CORRECTION_LANGUAGES=en,fr,es,de,it
DEFAULT_CORRECTION_LEVEL=intermediate 